<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC6E7E"
    tools:context=".SelectionPage">

    <ImageView
        android:id="@+id/question_mark_button"
        android:layout_width="411dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/question_mark_button"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="220dp"
        android:layout_height="61dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="516dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
        android:id="@+id/button_game"
        android:layout_width="189dp"
        android:layout_height="80dp"
        android:text="START GAME"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="600dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="191dp"
        android:layout_height="61dp"
        android:text="Select the grid"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="392dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner3"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="91dp"
        app:layout_constraintTop_toBottomOf="@+id/question_mark_button"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="189dp"
        android:layout_height="61dp"
        android:entries="@array/colors"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="139dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="230dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"/>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="189dp"
        android:layout_height="61dp"
        android:entries="@array/colors"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="268dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    "
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="71dp"
    tools:layout_editor_absoluteY="223dp" />
</androidx.constraintlayout.widget.ConstraintLayout>