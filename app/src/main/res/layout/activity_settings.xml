<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#305482"
    tools:context=".SettingsActivity">

    <View
        android:id="@+id/settingsBox"
        android:layout_width="330dp"
        android:layout_height="507dp"
        android:background="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776" />

    <Button
        android:id="@+id/settingsApply"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="168dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:background="#17233D"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/apply"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/settingsBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar2"
        app:layout_constraintVertical_bias="0.689" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="159dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar2"
        app:layout_constraintEnd_toEndOf="@+id/settingsBox"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="@+id/settingsBox"
        app:layout_constraintTop_toTopOf="@+id/settingsBox"
        app:layout_constraintVertical_bias="0.656" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="159dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingsBox"
        app:layout_constraintEnd_toEndOf="@+id/settingsBox"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="@+id/settingsBox"
        app:layout_constraintTop_toTopOf="@+id/settingsBox"
        app:layout_constraintVertical_bias="0.446" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press_start_2p"
        android:text="Sounds:"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/seekBar"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@+id/settingsBox"
        app:layout_constraintTop_toTopOf="@+id/settingsBox"
        app:layout_constraintVertical_bias="0.653" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press_start_2p"
        android:text="Music:"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/settingsApply"
        app:layout_constraintEnd_toStartOf="@+id/seekBar2"
        app:layout_constraintStart_toStartOf="@+id/settingsBox"
        app:layout_constraintTop_toTopOf="@+id/settingsBox" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="323dp"
        android:layout_height="79dp"
        app:layout_constraintBottom_toTopOf="@+id/settingsBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_pixel" />


</androidx.constraintlayout.widget.ConstraintLayout>